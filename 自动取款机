int loaDate()
{
	FILE * fp=fopen("D:\\atm.txt","r");
	if(fp==NULL)
	{
		return 0;
	}
	else
	{
		while(!feof(fp))
		{
			Account * newNode=(Account *) malloc(sizeof(Account));

			newNode->next=NULL;
			fscanf(fp,"%s %s\n",newNeod->username,newNode->password);

			if(heade==NULL)
			{
				head=newNode;
				tail=newNode;
			}
			else
			{
				tail->next=newNode;
				tail=newNode;
			}
		}
		fclose(fp);
		return 1;
	}
}

void printLinkedlist()
{
	Account * curP=head;
	while(curP!=NULL)
	{
		printf("%s\t%s\n",curP->username,curP->password);
		curP=curP->next;
	}
}

